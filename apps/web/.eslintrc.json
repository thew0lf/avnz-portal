{
  "env": { "es2021": true, "browser": true, "node": true },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "prettier"
  ],
  "ignorePatterns": [
    ".next/**",
    "node_modules/**",
    "public/**"
  ],
  "overrides": [
    {
      "files": [
        "app/**/page.tsx",
        "app/**/layout.tsx",
        "app/**/loading.tsx"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "@/components/ui/data-table",
                "message": "Do not import DataTable into server components. Define columns and render within a Client Component wrapper (e.g., *Table.tsx) and use that instead."
              }
            ]
          }
        ]
      }
    }
  ]
}

