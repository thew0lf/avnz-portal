# Project
project_name        = "avnzr"
region              = "us-east-1"

# DNS & TLS
domain_name         = "portal.example.com"        # DNS name you will use for the app
hosted_zone_id      = "Z123EXAMPLE"               # Route53 Hosted Zone ID containing domain_name
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# EKS Cluster
cluster_name        = "avnzr-eks"
node_instance_types = ["t3.medium"]
node_desired_size   = 3
node_min_size       = 2
node_max_size       = 6

# Secrets in SSM (SecureString)
db_password_ssm_name  = "/avnzr/db/password"
ssm_auth_secret_name  = "/avnzr/auth/secret"
ssm_db_url_name       = "/avnzr/db/url"          # e.g., postgres://user:pass@host:5432/avnzr_portal
ssm_app_aes_key_name  = "/avnzr/app/aes_key"     # 32-byte key (base64) for app-level AES encryption

# GitHub OIDC (for CI to push to ECR)
github_org  = "your-github-org"
github_repo = "avnz-portal"

# Optional (ECR image refs used by legacy ECS skeleton; GitOps uses Kustomize in k8s/overlays/prod)
api_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/avnzr-api:latest"
web_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/avnzr-web:latest"
ai_image  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/avnzr-ai:latest"

