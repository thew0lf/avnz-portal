{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "prettier"
  ],
  "ignorePatterns": [
    "dist/**"
  ],
  "overrides": [
    {
      "files": [
        "apps/web/app/**/page.tsx",
        "apps/web/app/**/layout.tsx",
        "apps/web/app/**/loading.tsx"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "@/components/ui/data-table",
                "message": "Do not import DataTable into server components. Define columns and render within a Client Component wrapper (e.g., *Table.tsx) and use that instead."
              }
            ]
          }
        ]
      }
    }
  ]
}
